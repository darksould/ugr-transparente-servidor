extends layout
include tablas.jade
include menu.jade

block content
	#rastro-idiomas
		#rastro
			ul#rastro_breadcrumb
				li.first
					span.first Docencia / #{seccion}
	#general
		+ menu("Estudiantes")
		#pagina
			h1#titulo_pagina
				span.texto_titulo #{seccion}

			div(id="contenido", class="sec_interior")
				.content_doku

					ul.enlaces
						li.level1
							each valor in contenido
								if valor.seccion == ""
									.li
										a(class="enlaces-cabecera" href="##{valor.link}") #{valor.encabezado}
							.li
								a(class="enlaces-cabecera" href=null) Matrículas
							ul.enlaces
								li.level2
									each valor in contenido
										if valor.seccion == "Matrículas"
											.li
												a(class="enlaces-cabecera" href="##{valor.link}") #{valor.encabezado}
							.li
								a(class="enlaces-cabecera" href=null) Canales de comunicación y representación
							ul.enlaces
								li.level2
									each valor in contenido
										if valor.seccion == "Canales de comunicación y representación"
											.li
												a(class="enlaces-cabecera" href="##{valor.link}") #{valor.encabezado}
							.li
								a(class="enlaces-cabecera" href=null) Becas y ayudas
							ul.enlaces
								li.level2
									each valor in contenido
										if valor.seccion == "Becas y ayudas"
											.li
												a(class="enlaces-cabecera" href="##{valor.link}") #{valor.encabezado}
							.li
								a(class="enlaces-cabecera" href=null) Origen de los estudiantes
							ul.enlaces
								li.level2
									each valor in contenido
										if valor.seccion == "Origen de los estudiantes"
											.li
												a(class="enlaces-cabecera" href="##{valor.link}") #{valor.encabezado}

					+ generar_tablas(contenido,datos)
