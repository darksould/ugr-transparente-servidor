extends layout

block content
	#rastro-idiomas
		#rastro
			ul#rastro_breadcrumb
				li.first
					span.first Gestión e Investigación / #{seccion}
	#general
		#menus
			- var mode1 = "tipo2 item-first_level"
			- var mode2 = "tipo2 item-first_level"
			- var mode3 = "tipo2 item-first_level"
			- var mode4 = "tipo2 item-first_level"
			- var mode5 = "selected tipo2-selected item-first_level"
			- var mode6 = "tipo2 item-first_level"
			- var mode7 = "tipo2 item-first_level"

			- var submenu1_display = "display:none;"
			- var submenu2_display = "display:none;"
			- var submenu3_display = ""

			- var item1_selected = "tipo1"
			- var item2_selected = "tipo1"
			- var item3_selected = "tipo1"

			- var item4_selected = "tipo1"
			- var item5_selected = "tipo1"
			- var item6_selected = "tipo1"

			- var item7_selected = "tipo1-selected"
			- var item8_selected = "tipo1"

			include ./menu.jade
		#pagina
			h1#titulo_pagina
				span.texto_titulo #{seccion}

			div(id="contenido", class="sec_interior")
				.content_doku

					ul.enlaces
						li.level1
							each valor in contenido
								.li
									a(class="enlaces-cabecera" href="##{valor.link}") #{valor.encabezado}

					each valor in contenido
						h1
							a(id="#{valor.link}", name="__doku_encabezado_de_primer_nivel") #{valor.encabezado}

						.level1
							p #{valor.texto}

							table.inline
								colgroup
									col(span='1', style='width: 80%;')
									col(span='1', style='width: 20%;')
								tbody
									tr
										if valor.tipo==1
											th.centeralign Descripción
											th.centeralign Enlace
										else
											th.centeralign Descripción
											th.centeralign Datos en Opendata
											th.centeralign Ver
											th.centeralign Archivo

									each elemento in datos
										if elemento.dataset==valor.encabezado
											tr
												if elemento.tipo==1
													td(class="centeralign par") #{elemento.nombre}

													td(class="centeralign impar")
														a(href="#{elemento.url}",target="_blank")
															img(class="link",src="imagenes/link.png", alt="link")
												else
													td(class="centeralign par") #{elemento.nombre}

													if elemento.url==0
														td(class="centeralign impar")
													else
														td(class="centeralign impar")
															a(href="#{servidor}dataset/#{elemento.id_dataset}/resource/#{elemento.url}",target="_blank")
																img(class="link",src="imagenes/link.png", alt="link")

													if elemento.vista==0
														td(class="centeralign par")
													else
														td(class="centeralign par")
															a(href="#dialog" class="view" rel="#{servidor}dataset/#{elemento.descarga}" name="#{elemento.nombre}")
																img(class="view",src="imagenes/view.png", alt="view")

													if elemento.descarga==0
														td(class="centeralign impar")
													else
														td(class="centeralign impar")
															a(href="#{servidor}dataset/#{elemento.descarga}")
																img(class="save",src="imagenes/save.png", alt="save")
